# AI-BPMS Backend Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
BPMS_SERVER_HOST=localhost
BPMS_SERVER_PORT=8081

# Database Configuration
BPMS_DATABASE_HOST=localhost
BPMS_DATABASE_PORT=5432
BPMS_DATABASE_USER=bpms_user
BPMS_DATABASE_PASSWORD=bpms_pass
BPMS_DATABASE_DBNAME=ai_bpms

# Authentication Configuration
BPMS_JWT_SECRET=your-256-bit-secret-change-in-production-please
BPMS_AUTH_PROVIDER=jwt

# Keycloak Configuration (if using Keycloak)
BPMS_KEYCLOAK_BASE_URL=http://localhost:8080
BPMS_KEYCLOAK_REALM=ai-bpms
BPMS_KEYCLOAK_CLIENT_ID=ai-bpms-backend
BPMS_KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# OIDC Configuration (if using external OIDC provider)
BPMS_OIDC_PROVIDER=auth0
BPMS_OIDC_CLIENT_ID=your-oidc-client-id
BPMS_OIDC_CLIENT_SECRET=your-oidc-client-secret
BPMS_OIDC_DOMAIN=your-domain.auth0.com

# NATS Configuration
BPMS_NATS_URL=nats://localhost:4222
BPMS_NATS_CLUSTER_ID=bpms-cluster

# Redis Configuration
BPMS_REDIS_HOST=localhost
BPMS_REDIS_PORT=6379
BPMS_REDIS_PASSWORD=

# AI Configuration
BPMS_AI_OPENAI_API_KEY=your-openai-api-key
BPMS_AI_OPENAI_MODEL=gpt-4

# Logging Configuration
BPMS_LOGGING_LEVEL=info
BPMS_LOGGING_FORMAT=json

# Security Configuration
BPMS_ENCRYPTION_KEY=your-32-byte-encryption-key-here-

# Metrics Configuration
BPMS_METRICS_ENABLED=true
BPMS_METRICS_PORT=9090